{
  "name": "personal-website",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "license": "MIT",
  "repository": "sbozhook/personal-website",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "story:dev": "pnpm --filter histoire story:dev --open",
    "build": "pnpm run --filter personal-project build && pnpm run --filter plugins build",
    "build-only": "pnpm run -r build-only",
    "web:install": "pnpm --filter website install",
    "web:dev": "pnpm --filter website web:dev",
    "web:build": "pnpm --filter website web:build",
    "web:gen": "pnpm --filter website web:gen",
    "web:contributors": "pnpm --filter website web:contributors",
    "prepare": "pnpm simple-git-hooks",
    "test": "pnpm --filter personal-project test",
    "test-update": "pnpm --filter personal-project test-update",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "bumpp": "bumpp package.json packages/*/package.json website/package.json",
    "pub:release": "cd packages/core && pnpm pub:release"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.1",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "bumpp": "^10.1.1",
    "eslint": "^9.27.0",
    "lint-staged": "^15.5.2",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.3",
    "typescript": "5.8.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "pnpm": {
    "patchedDependencies": {
      "vitepress": "patches/vitepress.patch"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
