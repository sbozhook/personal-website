{
  "name": "@sbozhook/personal-website",
  "type": "module",
  "version": "0.0.4",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "license": "MIT",
  "repository": "sbozhook/personal-website",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "story:dev": "pnpm --filter histoire story:dev --open",
    "build": "pnpm run --filter @sbozhook/core build && pnpm run --filter plugins build",
    "build-only": "pnpm run -r build-only",
    "web:install": "pnpm --filter website install",
    "web:dev": "pnpm --filter website web:dev",
    "web:build": "pnpm --filter website web:build",
    "web:gen": "pnpm --filter website web:gen",
    "web:contributors": "pnpm --filter website web:contributors",
    "types:dev": "pnpm --filter @sbozhook/types types:dev",
    "types:build": "pnpm --filter @sbozhook/ypes types:build",
    "ui:dev": "pnpm --filter @sbozhook/ui ui:dev",
    "ui:build": "pnpm --filter @sbozhook/ui ui:build",
    "ui:preview": "pnpm --filter @sbozhook/ui ui:preview",
    "ui:test:unit": "pnpm --filter @sbozhook/ui ui:test:unit",
    "ui:test:e2e": "pnpm --filter @sbozhook/ui ui:test:e2e",
    "prepare": "pnpm simple-git-hooks",
    "test": "pnpm --filter personal-project test",
    "test-update": "pnpm --filter personal-project test-update",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "bumpp": "bumpp package.json packages/*/package.json website/package.json",
    "pub:release": "cd packages/core && pnpm pub:release",
    "release": "commit-and-tag-version",
    "release:minor": "commit-and-tag-version --release-as minor",
    "release:major": "commit-and-tag-version --release-as major",
    "release:patch": "commit-and-tag-version --release-as patch",
    "release:first": "commit-and-tag-version --first-release",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "@sbozhook/core": "workspace:*",
    "@sbozhook/types": "workspace:*",
    "@sbozhook/ui": "workspace:*",
    "lucide-vue-next": "^0.525.0",
    "reka-ui": "^2.3.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.1",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "bumpp": "^10.1.1",
    "commit-and-tag-version": "12.5.1",
    "eslint": "^9.27.0",
    "lint-staged": "^15.5.2",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.20.3",
    "typescript": "5.8.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "npx --no -- commitlint --edit $1"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
